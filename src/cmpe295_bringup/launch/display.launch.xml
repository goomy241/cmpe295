<launch>
     <let name="rviz_config_path"
          value="$(find-pkg-share cmpe295_bringup)/rviz/default.rviz" />

     <let name="kitti_path"
          value="$(find-pkg-share cmpe295_bringup)/kitti/2011_09_26/2011_09_26_drive_0001_sync" />

     <!-- yolo parameter -->
     <let name="yolo_model_path"
          value="$(find-pkg-share yolo_recognition)/yolov8n.pt" />

     <!-- mmdet3d parameter -->
     <let name="config_file"
         value="$(find-pkg-share mmdet3d_ros2)/pointpillars_hv_secfpn_8xb6-160e_kitti-3d-3class.py" />

     <let name="checkpoint_file"
         value="$(find-pkg-share mmdet3d_ros2)//hv_pointpillars_secfpn_6x8_160e_kitti-3d-3class_20220301_150306-37dc2420.pth" />

     <let name="score_threshold"
         value=0.3 />

     <node pkg="ros2_kitti_publishers" exec="kitti_publishers">
          <param name="kitti_path"
               value="$(var kitti_path)" />
     </node>

     <node pkg="yolo_recognition" exec="yolov8_pub">
          <param name="model_path"
               value="$(var yolo_model_path)" />
     </node>

     <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />
</launch>